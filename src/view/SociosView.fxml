<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="900.0" style="-fx-background-color: #f8fafc;" stylesheets="@sociosview.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SociosViewController">
   <children>
      <VBox spacing="20.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">
         <children>
            <!-- Título de la Sección -->
            <Label text="Directorio de Socios" textFill="#1e293b">
               <font>
                  <Font name="Segoe UI Bold" size="32.0" />
               </font>
            </Label>
            
            <!-- Filtro de Búsqueda -->
            <HBox alignment="CENTER_LEFT" spacing="15.0">
               <children>
                  <Label text="Buscar miembro:" textFill="#64748b">
                     <font>
                        <Font size="14.0" />
                     </font></Label>
                  <TextField fx:id="txtSearchSocio" prefHeight="40.0" prefWidth="400.0" promptText="Nombre o correo electrónico..." style="-fx-background-radius: 10;" />
               </children>
            </HBox>

            <TableView fx:id="tableSocios" prefHeight="300.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="colIdSocio" prefWidth="80.0" text="ID Socio" />
                <TableColumn fx:id="colNombre" prefWidth="220.0" text="Nombre" />
                <TableColumn fx:id="colApellido" prefWidth="220.0" text="Apellido" />
                <TableColumn fx:id="colEmail" prefWidth="320.0" text="Email" />
              </columns>
            </TableView>

            <!-- Formulario de Gestión (Estilo Card) -->
            <VBox spacing="15.0" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.06), 15, 0, 0, 8);">
               <children>
                  <HBox spacing="20.0">
                     <children>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Nombre:" textFill="#475569" />
                              <TextField fx:id="txtNombre" prefHeight="35.0" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Apellido:" textFill="#475569" />
                              <TextField fx:id="txtApellido" prefHeight="35.0" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <HBox spacing="20.0">
                     <children>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Correo Electrónico:" textFill="#475569" />
                              <TextField fx:id="txtEmail" prefHeight="35.0" />
                           </children>
                        </VBox>
                        <HBox alignment="BOTTOM_RIGHT" spacing="12.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Button onAction="#handleClear" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #94a3b8; -fx-text-fill: white; -fx-background-radius: 8;" text="Limpiar" />
                              <Button fx:id="btnEliminarSocio" onAction="#handleDeleteSocio" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #f87171; -fx-text-fill: white; -fx-background-radius: 8;" text="Eliminar" />
                              <Button fx:id="btnActualizarSocio" onAction="#handleUpdateSocio" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #fbbf24; -fx-text-fill: white; -fx-background-radius: 8;" text="Actualizar" />
                              <Button fx:id="btnGuardarSocio" onAction="#handleSaveSocio" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold;" text="Guardar" />
                           </children>
                        </HBox>
                     </children>
                  </HBox>
                  <Label fx:id="lblStatusSocio" text="Listo" textFill="#94a3b8" />
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
