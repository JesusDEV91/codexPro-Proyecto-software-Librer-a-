<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- Vista de Gestión de Préstamos Corregida para compatibilidad con Scene Builder -->

<AnchorPane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: #f1f5f9;" stylesheets="@prestamos.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PrestamosController">
   <children>
      <VBox spacing="25.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">
         <children>
            <!-- Cabecera -->
            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <children>
                  <VBox HBox.hgrow="ALWAYS">
                     <children>
                        <Label styleClass="label-header" text="Gestión de Préstamos" textFill="#0f172a">
                           <font>
                              <Font name="Segoe UI Bold" size="34.0" />
                           </font>
                        </Label>
                        <Label text="Administre las salidas y devoluciones del catálogo" textFill="#64748b">
                           <font>
                              <Font name="Segoe UI" size="14.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  <HBox alignment="CENTER_RIGHT" spacing="10.0">
                     <children>
                        <TextField fx:id="txtSearchPrestamo" prefHeight="40.0" prefWidth="300.0" promptText="Buscar préstamo..." styleClass="text-field" />
                     </children>
                  </HBox>
               </children>
            </HBox>
            
            <!-- Tabla de Préstamos: Se corrige la política usando la etiqueta fx:constant para máxima compatibilidad -->
            <TableView fx:id="tablePrestamos" styleClass="table-view" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="colId" prefWidth="80.0" text="ID Ref." />
                <TableColumn fx:id="colLibro" prefWidth="280.0" text="Libro Prestado" />
                <TableColumn fx:id="colSocio" prefWidth="220.0" text="Socio / Miembro" />
                <TableColumn fx:id="colFechaSalida" prefWidth="140.0" text="Fecha de Salida" />
                <TableColumn fx:id="colFechaDev" prefWidth="140.0" text="Fecha Vencimiento" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>

            <!-- Formulario de Registro (Diseño de Tarjeta) -->
            <VBox spacing="20.0" styleClass="form-card">
               <children>
                  <Label text="Registrar Nueva Transacción" textFill="#1e293b">
                     <font>
                        <Font name="Segoe UI Bold" size="18.0" />
                     </font>
                  </Label>
                  <HBox spacing="25.0">
                     <children>
                        <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Seleccionar Libro Disponible" textFill="#475569">
                                 <font><Font name="System Bold" size="12.0" /></font>
                              </Label>
                              <ComboBox fx:id="comboLibros" prefHeight="45.0" prefWidth="400.0" promptText="Escriba título para buscar..." styleClass="combo-box" />
                           </children>
                        </VBox>
                        <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Identificar Socio" textFill="#475569">
                                 <font><Font name="System Bold" size="12.0" /></font>
                              </Label>
                              <ComboBox fx:id="comboSocios" prefHeight="45.0" prefWidth="400.0" promptText="Nombre del socio..." styleClass="combo-box" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="25.0">
                     <children>
                        <VBox spacing="8.0">
                           <children>
                              <Label text="Fecha de Vencimiento" textFill="#475569">
                                 <font><Font name="System Bold" size="12.0" /></font>
                              </Label>
                              <DatePicker fx:id="dpDevolucion" prefHeight="45.0" prefWidth="250.0" styleClass="date-picker" />
                           </children>
                        </VBox>
                        <HBox alignment="BOTTOM_RIGHT" spacing="15.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Button mnemonicParsing="false" onAction="#handleClear" prefHeight="45.0" prefWidth="110.0" styleClass="button-secondary" text="Limpiar" />
                              <Button fx:id="btnEliminar" mnemonicParsing="false" onAction="#handleDelete" prefHeight="45.0" prefWidth="110.0" text="Eliminar" />
                              <Button onAction="#handleSave" prefHeight="50.0" prefWidth="250.0" styleClass="button-register" text="REGISTRAR PRÉSTAMO" />
                           </children>
                        </HBox>
                     </children>
                  </HBox>
                  <Label fx:id="lblStatus" text="Listo para registrar préstamos" />
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
